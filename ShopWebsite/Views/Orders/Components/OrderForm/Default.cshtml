@model ShopWebsite.Models.OrderDetails

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Order">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input hidden="hidden" asp-for="ProductId" />
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Order" class="btn btn-default" min="1" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Products">Back to List</a>
</div>

